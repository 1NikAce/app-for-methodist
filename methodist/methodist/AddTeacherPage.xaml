<Page x:Class="methodist.AddTeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:methodist"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="AddTeacherPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="surname" materialDesign:HintAssist.Hint="Фамилия" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="16" Height="45" Margin="20" Width="250"/>
            <TextBox x:Name="name" materialDesign:HintAssist.Hint="Имя" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="16" Height="45" Margin="20" Width="250"/>
            <TextBox x:Name="fatherName" materialDesign:HintAssist.Hint="Отчество" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="16" Height="45" Margin="20" Width="250"/>
            <Button Width="200" Content="Добавить" Margin="20" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
