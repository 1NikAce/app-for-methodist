<Page x:Class="methodist.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:methodist"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MainMenu">

    <Grid>
        <StackPanel VerticalAlignment="top" HorizontalAlignment="Left" Margin="10,100,0,0">
            <Button FontWeight="Light" Content="Преподаватели" x:Name="teachers" Width="200" Height="45" Margin="20" Click="teachers_Click"/>
            <Button FontWeight="Light" Content="Методист" x:Name="metodistJob" Width="200" Height="45" Margin="20" Click="metodistJob_Click"/>
        </StackPanel>
        <Frame HorizontalAlignment="Stretch" Margin="250,0,0,0" x:Name="MainFrame"/>
    </Grid>
</Page>
